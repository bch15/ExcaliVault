{
  "manifest_version": 3,
  "name": "ExcaliVault",
  "version": "1.0.0",
  "author": "Behzad Chaharbaghi",
  "description": "Save your Excalidraw drawings with auto-save and backup",
  "icons": {
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://excalidraw.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ExcaliVault"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://excalidraw.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://excalidraw.com/*"],
      "js": ["siteUI.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "save": {
      "suggested_key": {
        "default": "Ctrl+S",
        "mac": "Command+S"
      },
      "description": "Save current drawing"
    },
    "save-as": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save as new drawing"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open ExcaliSave"
    }
  }
}
